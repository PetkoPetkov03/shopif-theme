<!-- CART PAGE -->
<div class="cart-page">
  <h1>Your Cart</h1>

  {% if cart.item_count > 0 %}
    <div class="cart-items">

      {% for item in cart.items %}
        <div class="cart-item">
          <div class="cart-item-img">
            <a href="{{ item.url }}">
              <img src="{{ item.image | img_url: 'medium' }}" alt="{{ item.product.title }}">
            </a>
          </div>

          <div class="cart-item-info">
            <h2>{{ item.product.title }}</h2>

            {% if item.variant.title != "Default Title" %}
              <p class="variant">{{ item.variant.title }}</p>
            {% endif %}

            <p class="price">{{ item.line_price | money }}</p>

            <form action="/cart/change" method="post">
              <input type="hidden" name="id" value="{{ item.key }}">
              <div class="qty-control">
                <input type="number" name="quantity" min="0" value="{{ item.quantity }}">
                <button type="submit">Update</button>
              </div>
            </form>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="cart-totals">
      <p>Subtotal: <strong>{{ cart.total_price | money }}</strong></p>

      <a class="checkout-btn" href="/checkout">Proceed to Checkout</a>
    </div>

  {% else %}
    <p>Your cart is currently empty.</p>
  {% endif %}
</div>

<style>
  .cart-page {
    max-width: 900px;
    margin: 40px auto;
    padding: 20px;
    font-family: Arial, sans-serif;
  }

  .cart-items {
    margin-bottom: 30px;
  }

  .cart-item {
    display: flex;
    gap: 20px;
    border-bottom: 1px solid #eee;
    padding: 20px 0;
  }

  .cart-item-img img {
    width: 120px;
    border-radius: 6px;
  }

  .cart-item-info h2 {
    margin: 0;
    font-size: 20px;
  }

  .variant {
    color: #555;
    font-size: 14px;
  }

  .price {
    font-size: 18px;
    margin: 8px 0;
    color: #333;
  }

  .qty-control {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .qty-control input {
    width: 60px;
    padding: 5px;
  }

  .qty-control button {
    padding: 6px 12px;
    cursor: pointer;
    background: #000;
    color: #fff;
    border: none;
    border-radius: 4px;
  }

  .cart-totals {
    text-align: right;
    margin-top: 20px;
    font-size: 18px;
  }

  .checkout-btn {
    display: inline-block;
    margin-top: 15px;
    background: #000;
    color: #fff;
    padding: 12px 25px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 17px;
  }
</style>
